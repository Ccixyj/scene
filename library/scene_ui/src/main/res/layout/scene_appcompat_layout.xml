<?xml version="1.0" encoding="utf-8"?>
<com.bytedance.scene.ui.view.CompatSceneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.bytedance.scene.ui.view.StatusBarView
        android:id="@id/scene_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.Toolbar
        android:id="@id/scene_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="?homeAsUpIndicator"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

    <FrameLayout
        android:id="@id/scene_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?android:windowBackground" />

    <com.bytedance.scene.ui.view.NavigationBarView
        android:id="@id/scene_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.bytedance.scene.ui.view.CompatSceneLayout>